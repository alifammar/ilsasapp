<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/langit"
    tools:context="com.example.alf.ilsasapp.ProfileActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewUserEmail"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="GUIDE BOOK LMS TNB ILSAS"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/buttonEbook1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Admin Faculty Create Courses" />

        <Button
            android:id="@+id/buttonEbook2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Fungsi Admin HEP User" />

        <Button
            android:id="@+id/buttonEbook3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Trainer Publish" />

        <Button
            android:id="@+id/buttonEbook4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Aprover Aprove" />

        <Button
            android:id="@+id/buttonEbook5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Trainer Upload EContent" />

        <Button
            android:id="@+id/buttonEbook6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Admin Faculti Add Content Enrol" />

        <Button
            android:id="@+id/buttonEbook7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Cara sepenuhnya masukkan e-contents" />

        <Button
            android:id="@+id/buttonEbook8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Trainee signup" />

        <Button
            android:id="@+id/buttonEbook9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Trainee menggunakan LMS" />

        <Button
            android:id="@+id/buttonEbook10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Super Admin Branch User" />

        <Button
            android:id="@+id/buttonEbook11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="EL Super Admin Unit Courses Modules" />


        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/buttonLogout"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="152dp"
            android:layout_height="89dp"
            android:src="@drawable/c42c88721e2ad330e2cc2c122479de6c"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/imageView"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />
        />
    </LinearLayout>


</ScrollView>

